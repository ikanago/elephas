  "components": {
    "schemas": {
      "ErrorMessage": {
        "type": "object",
        "required": [
          "error"
        ],
        "properties": {
          "error": {
            "type": "string"
          }
        }
      },
      "Follow": {
        "type": "object",
        "required": [
          "follow_from_name",
          "follow_to_name"
        ],
        "properties": {
          "follow_from_name": {
            "type": "string"
          },
          "follow_to_name": {
            "type": "string"
          }
        }
      },
      "LoginCredential": {
        "type": "object",
        "required": [
          "name",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "NewPost": {
        "type": "object",
        "required": [
          "content"
        ],
        "properties": {
          "content": {
            "type": "string"
          }
        }
      },
      "Post": {
        "type": "object",
        "required": [
          "id",
          "user_name",
          "content",
          "published_at"
        ],
        "properties": {
          "content": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "published_at": {
            "type": "string",
            "format": "date-time"
          },
          "user_name": {
            "type": "string"
          }
        }
      },
      "SignupCredential": {
        "type": "object",
        "required": [
          "name",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "alice"
          },
          "password": {
            "type": "string",
            "example": "password"
          }
        }
      },
      "UserProfile": {
        "type": "object",
        "required": [
          "name",
          "display_name",
          "description",
          "avatar_url"
        ],
        "properties": {
          "avatar_url": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "display_name": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "UserProfileUpdate": {
        "type": "object",
        "required": [
          "display_name",
          "description",
          "avatar_url"
        ],
        "properties": {
          "avatar_url": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "display_name": {
            "type": "string"
          }
        }
      }
    }
  }
